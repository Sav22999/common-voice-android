<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFirstRunSpeak"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgSmartphone1Speak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/firstRunSpeakSectionBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_1" />

    <ImageView
        android:id="@+id/imgSmartphone2Speak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/firstRunSpeakSectionBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_2" />

    <ImageView
        android:id="@+id/imgBtnSendSpeak"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgSmartphone2Speak"
        app:layout_constraintStart_toEndOf="@+id/imgBtnRecordSpeak"
        app:layout_constraintTop_toBottomOf="@+id/imgTextBoxSpeak"
        app:srcCompat="@drawable/ic_send"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgBtnListenAgainSpeak"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgSmartphone2Speak"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnRecordSpeak"
        app:layout_constraintTop_toBottomOf="@+id/imgTextBoxSpeak"
        app:srcCompat="@drawable/listen2_cv"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgTextBoxSpeak"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_bottom_border_radius" />

    <ImageView
        android:id="@+id/imgTxtSpeak"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_text1" />

    <ImageView
        android:id="@+id/imgTxt2Speak"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_text2" />

    <ImageView
        android:id="@+id/imgBtnSkipSpeak"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/firstRunSpeakSectionBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_rounded" />

    <ImageView
        android:id="@+id/imgBtnRecordSpeak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSmartphone2Speak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTextBoxSpeak"
        app:srcCompat="@drawable/speak_cv" />

    <ImageView
        android:id="@+id/imgTxt3Speak"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSmartphone1Speak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/smartphone_text1" />

    <Button
        android:id="@+id/btnOneSpeak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="1"
        android:textSize="@dimen/text_very_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnTwoSpeak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="2"
        android:textSize="@dimen/text_very_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgTxt2Speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTxt2Speak"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnThreeSpeak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="135dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="3"
        android:textSize="@dimen/text_very_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnSkipSpeak"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnSkipSpeak"
        app:layout_constraintTop_toTopOf="@+id/imgBtnSkipSpeak"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnFourSpeak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="4"
        android:textSize="@dimen/text_very_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnRecordSpeak"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnRecordSpeak"
        app:layout_constraintTop_toTopOf="@+id/imgBtnRecordSpeak"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnEightSpeak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="8"
        android:textSize="@dimen/text_very_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnListenAgainSpeak"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnListenAgainSpeak"
        app:layout_constraintTop_toTopOf="@+id/imgBtnListenAgainSpeak"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnNineSpeak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="9"
        android:textSize="@dimen/text_very_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnSendSpeak"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnSendSpeak"
        app:layout_constraintTop_toTopOf="@+id/imgBtnSendSpeak"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtTutorialMessageBottomSpeak"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/top_bottom_border_radius_with_border"
        android:backgroundTintMode="screen"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="@string/txt1_tutorial_speak"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_very_big"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/firstRunSpeakSectionBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <Button
        android:id="@+id/btnNumberBottomSpeak"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/firstRunSpeakSectionBottom"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/txtTutorialMessageTopSpeak"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/top_bottom_border_radius_with_border"
        android:backgroundTintMode="screen"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_very_big"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <Button
        android:id="@+id/btnNumberTopSpeak"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFirstRunSpeakNoSmartphone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/firstRunSpeakSectionBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:viewBindingIgnore="true">

        <TextView
            android:id="@+id/txtReadContributionCriteriaSpeak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="70dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/txt_contribution_criteria"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_big"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnReadNowContributionCriteriaSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_rounded"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="@string/btn_read_now_guidelines_listen"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtReadContributionCriteriaSpeak" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstRunSpeakSectionBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/top_border_radius"
        android:backgroundTint="@color/colorWhite"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnNextSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="@string/btn_tutorial1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/seekBarFirstRunSpeak"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorBackground"
            android:clickable="false"
            android:focusable="false"
            android:foregroundTint="@color/colorBackground"
            android:indeterminate="false"
            android:indeterminateTint="@color/colorBackground"
            android:max="9"
            android:progress="0"
            android:progressBackgroundTint="@color/colorBackground"
            android:progressDrawable="@color/colorTransparent"
            android:progressTint="@color/colorBackground"
            android:secondaryProgressTint="@color/colorBackground"
            android:thumbTint="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNextSpeak"
            app:tickMark="@drawable/tick_mark"
            app:tickMarkTint="@color/colorGray" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>