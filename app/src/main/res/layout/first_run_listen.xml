<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFirstRunListen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/seekBarFirstRunListen"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/colorBackground"
        android:clickable="false"
        android:focusable="false"
        android:foregroundTint="@color/colorBackground"
        android:indeterminate="false"
        android:indeterminateTint="@color/colorBackground"
        android:max="7"
        android:progress="0"
        android:progressBackgroundTint="@color/colorBackground"
        android:progressTint="@color/colorBackground"
        android:secondaryProgressTint="@color/colorBackground"
        android:thumbTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tickMarkTint="@color/colorBlack" />

    <Button
        android:id="@+id/btnNextListen"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_rounded"
        android:text="@string/btn_tutorial1"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgSmartphone1Listen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_1" />

    <ImageView
        android:id="@+id/imgSmartphone2Listen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_2" />

    <ImageView
        android:id="@+id/imgBtnNoListen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="168dp"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTxt2Listen"
        app:srcCompat="@drawable/no_thumb_cv"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgBtnYesListen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="168dp"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTxt2Listen"
        app:srcCompat="@drawable/yes_thumb_cv"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgTextBoxListen"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorBlack" />

    <ImageView
        android:id="@+id/imgTxtListen"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_text1" />

    <ImageView
        android:id="@+id/imgTxt2Listen"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smartphone_text2" />

    <ImageView
        android:id="@+id/imgBtnSkipListen"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_rounded" />

    <ImageView
        android:id="@+id/imgBtnPlayListen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="158dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTextBoxListen"
        app:srcCompat="@drawable/listen_cv" />

    <ImageView
        android:id="@+id/imgTxt3Listen"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:layout_marginBottom="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/smartphone_text1" />

    <Button
        android:id="@+id/btnOneListen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="1"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnTwoListen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="2"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnThreeListen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="3"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnFourListen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="4"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTxt2Listen"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnSevenListen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="7"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTxt2Listen"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnEightListen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:text="8"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgTxt2Listen"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtTutorialMessageBottomListen"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/background_textarea_message_first_run"
        android:backgroundTintMode="screen"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="10dp"
        android:text="@string/txt1_tutorial_speak"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <Button
        android:id="@+id/btnNumberBottomListen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/txtTutorialMessageTopListen"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_textarea_message_first_run"
        android:backgroundTintMode="screen"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <Button
        android:id="@+id/btnNumberTopListen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/firstrun_number_rounded"
        android:fontFamily="@font/sourcecodepro_black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>